---
layout: default
ogtype: article
---

{% include "styles.html", partials: "
components/code,
components/banner,
components/collection-navigation" %}

{% block content %}
<section class="PageHeader MarginTop-xxl">
  <div class="Text--Secondary MarginY-xxs">
    <time>{{ date | date_formatted }}</time>
    <span>
      {% for tag in tags %}
        <a href="/tags/{{ tag }}" class="TagLink">#{{ tag }}</a>
      {% endfor %}
    </span>
    <span class="Reading-Time"> ({{ content | timeToRead }}) </span>
  </div>

  {% comment %}<div class="PostSummary">
    <strong>tl;dr: </strong>
    {{ excerpt }}
  </div>
  {% endcomment %}
</section>

{% include "post-image.html" %}

<article class="Article">
  {{ content }}
</article>


<details class="Comments">
  <summary>Comments</summary>
  <section>
    <div id="disqus_thread"></div>
  </section>

  {% include "scripts.html", async, partials: "disqus" %}
</details>

{% include "collection_navigation.html",
  page: page,
  collection: collections.posts,
  name: "post"
%}


{% endblock %}
