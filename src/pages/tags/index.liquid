---
pagination:
  data: collections
  size: 1
  alias: tag
  addAllPagesToCollections: true
layout: default
excerpt: Posts tagged with “{{ tag }}”
renderData:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
---

{% assign tagPosts = collections[tag] %}

<h1 class="Heading MarginTop-xxl">
  <span class="TitleShadow">Posts tagged with “{{ tag }}”</span>
</h1>

<section class="PostListWrapper" style="--totalPosts: {{ tagPosts.length  | plus:1 }}">
  <ol class="PostList MarginTop-l">
    {% for item in tagPosts %}
      <li>
        <a class="Link PostList-Link MarginTop-s" href="{{item.url}}">{{ item.data.title }}</a>
      </li>
    {% endfor %}
  </ol>
</section>
